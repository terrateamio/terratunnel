# Terratunnel Environment Variables

# OAuth Configuration
# GitHub OAuth App credentials
# Create a GitHub OAuth App at: https://github.com/settings/developers
# Set Authorization callback URL to: https://yourdomain.com/auth/github/callback
# Admin users will access admin panel at: https://yourdomain.com/_admin
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# JWT Configuration
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Server Configuration (optional)
TERRATUNNEL_HOST=0.0.0.0
TERRATUNNEL_PORT=8000
TERRATUNNEL_DOMAIN=tunnel.terrateam.dev
TERRATUNNEL_DB_PATH=terratunnel.db

# Admin Configuration (optional)
# Comma-separated list of usernames that have admin access
TERRATUNNEL_GITHUB_ADMIN_USERS=octocat,user2
TERRATUNNEL_GITLAB_ADMIN_USERS=
TERRATUNNEL_GOOGLE_ADMIN_USERS=

# Client Configuration (optional)
TERRATUNNEL_SERVER_URL=ws://tunnel.terrateam.dev
TERRATUNNEL_LOCAL_ENDPOINT=http://localhost:3000
TERRATUNNEL_DASHBOARD=false
TERRATUNNEL_API_KEY=your_api_key_here

# Authentication Configuration (optional)
# Set to false to allow anonymous tunnel creation (not recommended for production)
REQUIRE_AUTH_FOR_TUNNELS=true